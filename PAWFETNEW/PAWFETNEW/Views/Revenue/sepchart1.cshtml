@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	exportEnabled: true,
	animationEnabled: true,
	//title: {
 //       text: ViewBag.Message,
	//	fontSize: 21
	//},
	data: [{
		type: "pie",
		startAngle: 160,
		toolTipContent: "<b>{label}</b>: {y}%",
		indexLabel: "{label} - {y}%",
		dataPoints: @Html.Raw(TempData["DataPoints"])
	}]
});
chart.render();

}
    </script>
</head>

<body>
    <h2>@ViewBag.Message</h2>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>

    <center>

        <div class="row">
            <div class="col-md-4">
                <button class="btn-success" onclick="location.href='@Url.Action("Augchart", "Revenue")'">August</button>
            </div><br /><br />
            <div class="col-md-4">
                <button class="btn-success" onclick="location.href='@Url.Action("sepchart", "Revenue")'">September</button>
            </div><br /><br />
            <div class="col-md-4">
                <button class="btn-success" onclick="location.href='@Url.Action("Octchart", "Revenue")'">October</button>
            </div><br /><br />


        </div>
    </center>
    <a href="@Url.Action("Daycare_revenue","Revenue")">Revenue page </a>
</body>
</html>