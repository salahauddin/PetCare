@model PAWFETNEW.Models.Tbl_User

@{
    ViewBag.Title = "Register1";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.js"></script>
    <link href="~/CSS/Register.css" rel="stylesheet" />
</head>
<body>

    

    @using (Html.BeginForm("Register1", "LoginAndRegister", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class=" col-md-12 col-sm-12 col-lg-12 col-xs-12">
                <div class="form-horizontal">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h2 class="heading">@PAWFETNEW.Resources.MyTexts.SIGNUP</h2>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <td><label class="control-label col-md-4" for="Name">@PAWFETNEW.Resources.MyTexts.Name</label></td>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <td><label class="control-label col-md-4" for="Contact Number">@PAWFETNEW.Resources.MyTexts.ContactNumber</label></td>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.Phone_No, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <td><label class="control-label col-md-4" for="Address">@PAWFETNEW.Resources.MyTexts.Address</label></td>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.UserAddress, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <td><label class="control-label col-md-4" for="EmailID">@PAWFETNEW.Resources.MyTexts.EmailID</label></td>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <td><label class="control-label col-md-4" for="Password">@PAWFETNEW.Resources.MyTexts.Password</label></td>
                                    <div class="col-md-6">
                                        @*@Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control", @id = "password" })
                                        <span><i class="fa fa-eye icon   " id="show_hide"></i></span>
                                        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <td><label class="control-label col-md-4" for="ConfirmPassword">@PAWFETNEW.Resources.MyTexts.ConfirmPassword</label></td>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-6">
                                        <button class="btn btn-success" type="submit">   @PAWFETNEW.Resources.MyTexts.SIGNUP</button>
                                    </div>
                                </div>
                                <div>
                                    @Html.ActionLink("English", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), new { language = "en-US" }, null)
                                    @Html.ActionLink("Tamil", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), new { language = "ta-IN" }, null)
                                    @Html.ActionLink("Hindi", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), new { language = "hi-IN" }, null)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
                }

                <script>
                    $(document).ready(function () {
                        $("#show_hide").mouseover(function () {
                            $("#password").attr("type", "text");
                        });

                        $("#show_hide").on("mouseleave", function () {
                            $("#password").attr("type", "password");
                        });

                    });
                </script>
</body>
