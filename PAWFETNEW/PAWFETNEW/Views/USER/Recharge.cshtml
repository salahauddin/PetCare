@model PAWFETNEW.Models.Tbl_User
@{
    /**/

    ViewBag.Title = "Recharge";
}
<head>
    <style>
        body{
            background-image:url("../../Images/Recharge1.jpeg");
            background-attachment:fixed;
        }
    </style>
</head>
<body>
    <h2 style="color:white;">@TempData["FailureMessage"]</h2>
    <div class="body-content" style="max-width:300px;margin:auto;height:480px;">
        @using (Html.BeginForm("Recharge", "USER", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Wallet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Wallet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Wallet, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Recharge" class="btn btn-default" />
                </div>
            </div>

        }
        </div>
</body>
